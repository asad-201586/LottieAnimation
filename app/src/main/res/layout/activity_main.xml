<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/awesome_loading"
            app:lottie_speed="1.5" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_01"
            app:lottie_speed="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_02"
            app:lottie_speed="1" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_03"
            app:lottie_speed="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_04"
            app:lottie_speed="1" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_05_setting_moving"
            app:lottie_speed="0.80" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_06_colorful"
            app:lottie_speed="0.50" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_07_colorful_2"
            app:lottie_speed="1.5" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_08_clock"
            app:lottie_speed="1" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_05_setting_moving"
            app:lottie_speed="0.80" />

    </LinearLayout>





</LinearLayout>